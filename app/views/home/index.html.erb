<script type="text/javascript">
  // change this to adjust the rating display
var bvTireRating = 2.5;
// multiply by 20 to get percentage
var starRating = bvTireRating*20;
// set the width of the stars
$('.star-ratings-top').width(starRating+'%'); 
  // Instantiate the Bootstrap carousel
$('.multi-item-carousel').carousel({
  interval: false
});

// for every slide in carousel, copy the next slide's item in the slide.
// Do the same for the next, next item.
$('.multi-item-carousel .item').each(function(){
  var next = $(this).next();
  

  // console.log($(this));
  // var img = $(this).children("img")
  // img.attributes("class" , "active");

  if (!next.length) {
    next = $(this).siblings(':first');
  }
  next.children(':first-child').clone().appendTo($(this));

  
  if (next.next().length>0) {
    next.next().children(':first-child').clone().appendTo($(this));
     next.next().children(':nth-child(2)').find("img").addClass("active");

  } else {
    $(this).siblings(':first').children(':first-child').clone().appendTo($(this));
    $(this).siblings(':first').children(':nth-child(2)').find("img").addClass("active");
  }
});



  PrivatePub.subscribe("/messages/new", function(data, channel) {
    switch(data.messages.typeo){
      case "mvright":
      $('.carousel').carousel('next');
      $("#pricing").html(data.messages.data);
      break;

      case "mvleft":
      $('.carousel').carousel('prev');
       $("#pricing").html(data.messages.data);
      break;

      default:
      $("#"+data.messages.typeo).html(data.messages.data);
 
}
  
});
</script>